<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.googlecode.mgwt.ui.client.widget.panel.scroll"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button"
	xmlns:v="urn:import:com.truong.brook.client.view" xmlns:r="urn:import:com.googlecode.mgwt.ui.client.widget.input.radio"
	xmlns:t="urn:import:com.googlecode.mgwt.ui.client.widget.touch">
	<ui:style>
	.container {
		background: transparent;
	}
	
	.image {
		width: 50%;
		margin: 10% auto;
		text-align: center;
	}
	
	.txtInfo {
		width: 60%;
		margin: 1% auto;
		text-align: center;
		font-size: 1,5em;
		color: #FFFFFF;
		overflow-y: auto;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel width="100%"
			ui:field="contaninerPanelHead" horizontalAlignment="ALIGN_CENTER">
			<g:Image ui:field="imageBook" styleName="{style.image}"></g:Image>
			<g:Label ui:field="txtNameBook" styleName="{style.txtInfo}"></g:Label>
			<g:Label ui:field="txtAuthor" styleName="{style.txtInfo}"></g:Label>
			<g:Label ui:field="txtIntrodue" styleName="{style.txtInfo}"></g:Label>
		</g:VerticalPanel>
		<g:VerticalPanel width="100%" ui:field="containerPanel"
			spacing="5" addStyleNames="{style.container}" horizontalAlignment="ALIGN_CENTER">
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 